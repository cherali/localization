{
  "name": "sc-localization",
  "description": "In-memory low bundle size, type support, file-base localization, for server-rendering and client-rendering js library/framework",
  "private": false,
  "type": "module",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "url": "cherali/localization"
  },
  "author": {
    "name": "Ali Cheraghi",
    "email": "alicheraghi148@gmail.com"
  },
  "keywords": [
    "localization",
    "javascript localization",
    "js localization",
    "typescript localization",
    "ts localization",
    "client localization",
    "server localization",
    "type support localization",
    "in-memory localization",
    "reactjs localization",
    "nextjs localization"
  ],
  "bugs": {
    "url": "https://github.com/cherali/localization/issues"
  },
  "files": [
    "dist",
    "server.d.ts",
    "client.d.ts"
  ],
  "sideEffects": false,
  "exports": {
    "./server": {
      "import": "./dist/es/server.js",
      "require": "./dist/cjs/server.cjs",
      "types": "./server.d.ts"
    },
    "./client": {
      "import": "./dist/es/client.js",
      "require": "./dist/cjs/client.cjs",
      "types": "./client.d.ts"
    }
  },
  "scripts": {
    "lint": "eslint --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "test-ui": "vitest --ui",
    "test-ui-cov": "vitest --ui --coverage.enabled=true",
    "prebuild": "npm run test && npm run lint && npm run format",
    "build": "tsc && vite build",
    "api-extract": "api-extractor run --local --verbose",
    "api-docs": "npx api-documenter markdown -i temp -o docs",
    "build-and-doc": "npm run build && npm run api-extract && npm run api-docs && npm run purge",
    "analyze": "npm run build --report",
    "purge": "rm -rf dist/index.d.ts dist/index.d.ts.map dist/providers dist/utils dist/types"
  },
  "devDependencies": {
    "@eslint/js": "9.12.0",
    "@microsoft/api-documenter": "7.25.17",
    "@microsoft/api-extractor": "7.47.9",
    "@types/node": "22.7.4",
    "@typescript-eslint/eslint-plugin": "8.8.0",
    "@typescript-eslint/parser": "8.8.0",
    "@typescript-eslint/typescript-estree": "8.8.0",
    "@vitest/coverage-istanbul": "2.1.2",
    "@vitest/ui": "2.1.2",
    "eslint": "9.12.0",
    "eslint-config-prettier": "9.1.0",
    "globals": "15.10.0",
    "husky": "9.1.6",
    "jsdom": "25.0.1",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "rollup-plugin-esbuild": "6.1.1",
    "typescript": "5.5.4",
    "typescript-eslint": "8.8.0",
    "vite": "5.4.8",
    "vite-plugin-dts": "4.2.3",
    "vite-plugin-eslint": "1.8.1",
    "vite-tsconfig-paths": "5.0.1",
    "vitest": "2.1.2"
  }
}
